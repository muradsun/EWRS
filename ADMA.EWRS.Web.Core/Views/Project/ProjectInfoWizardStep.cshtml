@{
    Layout = "";
}

<div class="row">
    <div class="col-md-6">
        <fieldset>
            <legend>
                <i class="fa fa-info-circle"></i> &nbsp; Project Information
            </legend>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label> Project Name <span class="symbol required"></span> </label>
                        <input type="text" placeholder="Enter your Project Name" class="form-control" name="firstName" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label> Description </label>
                        <textarea type="text" placeholder="Enter your Description" class="form-control" name="Description" rows="10"></textarea>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset>
            <legend>
                <i class="fa fa-building-o"></i> &nbsp; Organization Reference
            </legend>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        Info
                    </div>
                </div>
            </div>


        </fieldset>
    </div>


</div>
