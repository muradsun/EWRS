@{
}
@model ProjectInfoWizardStepView

<div class="row">
    <div class="col-md-6">
        <fieldset style="min-height:335px;">
            <legend>
                <i class="fa fa-info-circle"></i> &nbsp; Project Information
            </legend>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label> Project Name <span class="symbol required"></span> </label>
                        <input type="text" placeholder="Enter your Project Name" class="form-control" name="firstName" asp-for="Name" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label> Description </label>
                        <textarea type="text" placeholder="Enter your Description" class="form-control" name="Description" rows="10" asp-for="Description"></textarea>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="col-md-6">
        <fieldset style="min-height:335px;">
            <legend>
                Project Organization Scope
            </legend>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="hidden" name="ORGANIZATION_ID" asp-for="ORGANIZATION_ID" />
                        <table class="table table-condensed" id="sample-table-4" cellpadding="10" cellspacing="20">
                            <thead>
                                <tr>
                                    <th>Organization</th>
                                    <th>Organization Name</th>
                                    @*<th class="hidden-xs"</th>*@
                                    <th>User Organization</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (OrganizationHierarchyView item in Model.OrganizationHierarchyTree)
                                {
                                    <tr>
                                        <td><b> @item.OrganizationType  </b></td>
                                        <td>  @item.OrganizationName </td>
                                        @if (item.IsTargetOrganization)
                                        {
                                            <td><span class="label label-sm label-success"> @item.IsTargetOrganization</span></td>
                                        }
                                        else
                                        {
                                            <td></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
</div>