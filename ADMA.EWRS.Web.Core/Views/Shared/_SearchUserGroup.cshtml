<fieldset>
    <legend>
        Search Criteria
    </legend>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                @*<label> First Name </label>*@
                <input name="firstName" class="form-control input-sm" type="text" placeholder="Enter your First Name">
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <input name="lastName" class="form-control input-sm" type="text" placeholder="Enter your Last Name">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <input type="text" placeholder="Enter PF#" class="form-control input-sm" name="PF" />
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <input type="text" placeholder="Enter Ext." class="form-control input-sm" name="Ext" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <input type="text" placeholder="Enter Email" class="form-control input-sm" name="Email" />
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <input id="customers" style="width: 100%;" />

                <script>
                $(document).ready(function() {
                    var autocomplete = $("#customers").kendoAutoComplete({
                        minLength: 1,
                        dataTextField: "ContactName",
                        headerTemplate: '<div class="dropdown-header k-widget k-header">' +
                                '<span>Photo</span>' +
                                '<span>Contact info</span>' +
                            '</div>',
                        template: '<span class="k-state-default" style="background-image: url(\'../content/web/Customers/#:data.CustomerID#.jpg\')"></span>' +
                                  '<span class="k-state-default"><h3>#: data.ContactName #</h3><p>#: data.CompanyName #</p></span>',
                        dataSource: {
                            transport: {
                                read:{
                                    dataType: "jsonp",
                                    url: "//demos.telerik.com/kendo-ui/service/Customers"
                                }
                            }
                        },
                        height: 400
                    }).data("kendoAutoComplete");
                });
                </script>


            </div>
        </div>
    </div>

</fieldset>

